<!DOCTYPE html>
<html>
<head>
  <title>Gamer</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container-fluid">
		<div class="row top-row">
			<div class="col-sm-4">
			</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" placeholder="Search"><button class="btn btn-danger">Search</button>
			</div>
			<div class="col-sm-4">
			<ul class="list-inline links">
				<li><i class="fa fa-user"></i></i><p>Players</p></li>
				<li><i class="fa fa-gamepad"></i><p>Games</p></li>
				<li><i class="fa fa-home"></i><p>Home</p></li>
				<% if current_user != nil %>
				<li><i class="fa fa-pencil-square-o"></i><p class="usersettings"><%= link_to "settings", edit_user_registration_path, :method => :get %></p></li>
				<li><i class="fa fa-sign-out"></i>
					<p class="signout"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></p></li>
					<% end %>
			</ul>
			</div>
		</div>
	</div>
	 <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
